# Establece la familia de la fuente a "Dank Mono"
font_family      family="Dank Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto

# Establece el tamaño de la fuente a 13.0
font_size 12.0
disable_ligatures always

# Mapea un rango de símbolos a "Symbols Nerd Font Mono"
symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d7,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+ed00-U+efc1,U+f000-U+f2ff,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f533,U+f0001-U+f1af0 Symbols Nerd Font Mono

# Oculta las decoraciones de la ventana
hide_window_decorations true

# Establece la opacidad del fondo a 0.8
background_opacity 0.95

# Establece la variable de entorno TERM a "xterm-256color"
env TERM=xterm-256color

# Gruvbox Material Dark Hard
include current-theme.conf

